import ast

def fix_bug_code(user_code):
    suggestions = []
    try:
        ast.parse(user_code)
    except SyntaxError as e:
        suggestions.append(f"Syntax error on line {e.lineno}: {e.msg}")
    else:
        if "print" not in user_code:
            suggestions.append("Add a print statement to display results.")
        if "==" in user_code and "if" not in user_code:
            suggestions.append("Use '==' inside if or while conditions.")
        if "input" not in user_code:
            suggestions.append("Try adding input() for user interaction.")
        
        if not suggestions:
            suggestions.append("Code looks good! No major bugs found.")
    
    return "\n".join(suggestions)
